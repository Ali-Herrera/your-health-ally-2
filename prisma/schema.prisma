generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model UserChatConversations {
    userChatConversationId String             @id @default(auto()) @map("_id") @db.ObjectId
    userId                 String
    title                  String
    messages               UserChatMessages[]
    description            String?
    createdAt              DateTime           @default(now())
    updatedAt              DateTime           @updatedAt
    orderField             Int                @default(0)

    @@map("userChatConversations")
}

model UserChatMessages {
    userChatMessageId      String                @id @default(auto()) @map("_id") @db.ObjectId
    conversation           UserChatConversations @relation(fields: [userChatConversationId], references: [userChatConversationId])
    userChatConversationId String                @db.ObjectId
    userId                 String
    content                String
    createdAt              DateTime              @default(now())
    updatedAt              DateTime              @updatedAt
    orderField             Int                   @default(0)

    @@map("userChatMessages")
}
